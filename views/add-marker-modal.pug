block content
    #add-marker-modal.modal.fade(tabindex="-1" role="dialog")
        .modal-dialog(role="document")
            .modal-content
                .modal-header
                    h5.modal-title Adicionar marcador
                    button.close(type="button" data-dismiss="modal" aria-label="Close")
                        span(aria-hidden="true") ×
                .modal-body
                    .container-fluid
                        .row
                            .col-12
                                .form-group
                                    label(for="category-selection") Selecione uma categoria
                                    select#category-selection.form-control
                                        option &#127795 Meio ambiente
                                        option &#127974 Urbanismo
                                        option &#128106 População
                        .row
                            .col-12
                                .form-group
                                    label(for="sub-category-selection") Selecione uma sub-categoria
                                    select#sub-category-selection.form-control
                                        option Descarte irregular de resíduos sólidos
                                        option Vazadouro a céu aberto
                                        option Presença de lixão
                                        option Poluição de rios
                                        option Imóveis abandonados, possíveis focos de doenças
                                        option Sugestão de inclusäo de novos ecopontos


                .modal-footer
                    button.btn.btn-primary(type="button") Adicionar marcador
                    button.btn.btn-secondary(type="button" data-dismiss="modal") Cancelar
